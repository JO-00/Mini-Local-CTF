<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>

    <style>
        * {
            box-sizing: border-box;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        body {
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #1e1e2f, #2b2b45);
            display: flex;
            justify-content: center;
            align-items: center;
            color: #f5f5f5;
        }

        .card {
            background: #111827;
            width: 420px;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        }

        h1 {
            margin-top: 0;
            font-size: 26px;
            text-align: center;
        }

        h3 {
            margin: 15px 0;
            text-align: center;
            font-weight: 500;
            color: #d1d5db;
        }

        .links {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }

        a {
            text-decoration: none;
            text-align: center;
            padding: 10px;
            border-radius: 8px;
            background: #2563eb;
            color: white;
            transition: 0.2s ease;
        }

        a:hover {
            background: #1d4ed8;
        }

        .secondary {
            background: #374151;
        }

        .secondary:hover {
            background: #4b5563;
        }

        .danger {
            background: #dc2626;
        }

        .danger:hover {
            background: #b91c1c;
        }

        .messages {
            margin-top: 15px;
        }

        .error {
            background: rgba(220, 38, 38, 0.15);
            border-left: 4px solid #dc2626;
            padding: 8px;
            margin-bottom: 8px;
            border-radius: 6px;
            color: #fecaca;
        }

        .success {
            background: rgba(34, 197, 94, 0.15);
            border-left: 4px solid #22c55e;
            padding: 8px;
            margin-bottom: 8px;
            border-radius: 6px;
            color: #bbf7d0;
        }
    </style>
</head>

<body>
    <div class="card">
        <h1>Welcome to the Home Page</h1>

        <% if (user) { %>
            <h3>Hello, <strong><%= user %></strong> ðŸ‘‹</h3>
        <% } else { %>
            <h3>You are not logged in</h3>
        <% } %>

        <div class="messages">
            <% if (error) { %>
                <% error.forEach(msg => { %>
                    <div class="error"><%= msg %></div>
                <% }) %>
            <% } %>

            <% if (success) { %>
                <% success.forEach(msg => { %>
                    <div class="success"><%= msg %></div>
                <% }) %>
            <% } %>
        </div>

        <div class="links">
            <% if (user) { %>
                <a href="/profile">View Profile</a>
                <a href="/logout" class="secondary">Log Out</a>
                <a href="/delete-account" class="danger">Delete Account</a>
            <% } else { %>
                <a href="/signup">Sign Up</a>
                <a href="/login" class="secondary">Log In</a>
            <% } %>
        </div>
    </div>
</body>
</html>
